# Autogenerated configuration file template
#################################
# aaaa-additional-processing	turn on to do AAAA additional processing (slow)
#
<% if @aaaa_additional_processing %>aaaa-additional-processing=<%= @aaaa_additional_processing %><% else %># aaaa-additional-processing=off<% end %>

#################################
# allow-from	If set, only allow these comma separated netmasks to recurse
#
<% if @allow_from %>allow-from=<%= allow_from.join(', ') %><% else %># allow-from=<% end %>

#################################
# auth-can-lower-ttl	If we follow RFC 2181 to the letter, an authoritative server can lower the TTL of NS records
#
<% if @auth_can_lower_ttl %>auth-can-lower-ttl=<%= auth_can_lower_ttl %><% else %># auth-can-lower-ttl=off<% end %>

#################################
# auth-zones	Zones for which we have authoritative data, comma separated domain=file pairs 
#
<% if @auth_zones %>auth-zones=<%= auth_zones %><% else %># auth-zones=<% end %>

#################################
# chroot	switch to chroot jail
#
<% if @chroot %>chroot=<%= chroot %><% else %># chroot=<% end %>

#################################
# client-tcp-timeout	Timeout in seconds when talking to TCP clients
#
<% if @client_tcp_timeout %>client-tcp-timeout=<%= client_tcp_timeout %><% else %># client-tcp-timeout=2<% end %>

#################################
# config-dir	Location of configuration directory (recursor.conf)
#
<% if @config_dir %>config-dir=<%= config_dir %><% else %># config-dir=/etc/powerdns/<% end %>

#################################
# daemon	Operate as a daemon
#
<% if @daemon %>daemon=<%= daemon %><% else %>daemon=yes<% end %>

#################################
# delegation-only	Which domains we only accept delegations from
#
<% if @delegation_only %>delegation-only=<%= delegation_only %><% else %>delegation-only=com,net<% end %>

#################################
# export-etc-hosts	If we should serve up contents from /etc/hosts
#
<% if @export_etc_hosts %>export-etc-hosts=<%= export_etc_hosts %><% else %># export-etc-hosts=off<% end %>

#################################
# fork	If set, fork the daemon for possible double performance
#
<% if @fork %>fork=<%= fork %><% else %># fork=yes<% end %>

#################################
# forward-zones	Zones for which we forward queries, comma separated domain=ip pairs
#
<% if @forward_zones %>forward-zones=<%= forward_zones %><% else %># forward-zones=<% end %>

#################################
# forward-zones-recurse	Zones for which we forward queries with recursion, comma separated domain=ip pairs
#
<% if @forward_zones_recurse %>forward-zones-recurse=<%= forward_zones_recurse %><% else %># forward-zones-recurse=<% end %>

#################################
# hint-file	If set, load root hints from this file
#
<% if @hint_file %>hint-file=<%= hint_file %><% else %># hint-file=<% end %>

#################################
# local-address	IP addresses to listen on, separated by spaces or commas
#
<% if @local_address %>local-address=<%= local_address.join(", ") %><% else %># local-address=<% end %>

#################################
# local-port	port to listen on
#
<% if @local_port %>local-port=<%= local_port %><% else %>local-port=53<% end %>

#################################
# log-common-errors	If we should log rather common errors
#
<% if @log_common_errors %>log-common-errors=<%= log_common_errors %><% else %># log-common-errors=yes<% end %>

#################################
# max-cache-entries	If set, maximum number of entries in the main cache
#
<% if @max_cache_entries %>max-cache-entries=<%= max_cache_entries %><% else %># max-cache-entries=0<% end %>

#################################
# max-negative-ttl	maximum number of seconds to keep a negative cached entry in memory
#
<% if @max_negative_ttl %>max-negative-ttl=<%= max_negative_ttl %><% else %># max-negative-ttl=3600<% end %>

#################################
# max-tcp-clients	Maximum number of simultaneous TCP clients
#
<% if @max_tcp_clients %>max-tcp-clients=<%= max_tcp_clients %><% else %># max-tcp-clients=128<% end %>

#################################
# max-tcp-per-client	If set, maximum number of TCP sessions per client (IP address)
#
<% if @max_tcp_per_client %>max-tcp-per-client=<%= max_tcp_per_client %><% else %># max-tcp-per-client=0<% end %>

#################################
# no-shuffle	Don't change
#
# no-shuffle=off
<% if @no_shuffle %>no-shuffle=<%= no_shuffle %><% else %># no-shuffle=off<% end %>

#################################
# query-local-address	Source IP address for sending queries
#
<% if @query_local_address %>query-local-address=<%= query_local_address %><% else %># query-local-address=<% end %>

#################################
# query-local-address6	Source IPv6 address for sending queries
#
<% if @query_local_address6 %>query-local-address6=<%= query_local_address6 %><% else %># query-local-address6=<% end %>

#################################
# quiet	Suppress logging of questions and answers
#
<% if @quiet %>quiet=<%= quiet %><% else %>quiet=yes<% end %>

#################################
# remotes-ringbuffer-entries	maximum number of packets to store statistics for
#
<% if @remotes_ringbuffer_entries %>remotes-ringbuffer-entries=<%= remotes_ringbuffer_entries %><% else %># remotes-ringbuffer-entries=0<% end %>

#################################
# serve-rfc1918	If we should be authoritative for RFC 1918 private IP space
#
<% if @serve_rfc1918 %>serve-rfc1918=<%= serve_rfc1918 %><% else %># serve-rfc1918=<% end %>

#################################
# server-id	Returned when queried for 'id.server' TXT, defaults to hostname
#
<% if @server_id %>server-id=<%= server_id %><% else %># server-id=<% end %>

#################################
# setgid	If set, change group id to this gid for more security
#
<% if @setgid %>setgid=<%= setgid %><% else %># setgid=<% end %>

#################################
# setuid	If set, change user id to this uid for more security
#
<% if @setuid %>setuid=<%= setuid %><% else %># setuid=<% end %>

#################################
# single-socket	If set, only use a single socket for outgoing queries
#
<% if @single_socket %>single-socket=<%= single_socket %><% else %># single-socket=off<% end %>

#################################
# soa-minimum-ttl	Don't change
#
<% if @soa_minimum_ttl %>soa-minimum-ttl=<%= soa_minimum_ttl %><% else %># soa-minimum-ttl=0<% end %>

#################################
# soa-serial-offset	Don't change
#
<% if @soa_serial_offset %>soa-serial-offset=<%= soa_serial_offset %><% else %># soa-serial-offset=0<% end %>

#################################
# socket-dir	Where the controlsocket will live
#
<% if @socket_dir %>socket-dir=<%= socket_dir %><% else %># socket-dir=/var/run/<% end %>

#################################
# spoof-nearmiss-max	If non-zero, assume spoofing after this many near misses
#
<% if @spoof_nearmiss_max %>spoof-nearmiss-max=<%= spoof_nearmiss_max %><% else %># spoof-nearmiss-max=20<% end %>

#################################
# trace	if we should output heaps of logging
#
<% if @trace %>trace=<%= trace %><% else %># trace=off<% end %>

#################################
# version-string	string reported on version.pdns or version.bind
#
<% if @version_string %>version-string=<%= version_string %><% else %># version-string=PowerDNS Recursor 3.1 $Id: pdns_recursor.cc 838 2006-05-19 14:35:27Z ahu $<% end %>

